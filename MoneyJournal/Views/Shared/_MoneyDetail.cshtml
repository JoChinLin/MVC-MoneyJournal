@model List<MoneyJournal.Models.ViewModels.MoneyUsage>

<div>
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>#</th>
                        <th>類別</th>
                        <th>日期</th>
                        <th>金額</th>
                    </tr>
                    @{int i = 0;}
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>
                                @item.CostType
                            </td>
                            <td>
                                @item.CostDate.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                @item.Amount.ToString("N0")
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </dl>
</div>
